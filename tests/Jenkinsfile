pipeline {
    agent any 
    stages {
        stage('Unit Tests') {
            steps {
                dir('tests/unit/pipeline/sherlock') {
                    sh 'python3 test_sherlock_wrapper.py'
                }
            }
            post {
                always {
                    junit 'tests/test-reports/*.xml'
                }
            }
        }
        stage('Check python') {
            steps {
                sh 'python3 --version'
            }
        }
    }
}

