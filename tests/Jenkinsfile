pipeline {
    agent any 
    stages {
        stage('Set up python venv') {
            steps {
                withPythonEnv('testEnv') {
                    sh 'pip install pyyaml'
                }
            }
        } 
        stage('Unit Tests') {
            environment {
                PYTHONPATH = '../../../../pipeline/sherlock'
            }
            steps {
                dir('tests/unit/pipeline/sherlock') {
                    withPythonEnv('testEnv') {
                        sh 'python3 --version'
                        sh 'python3 test_sherlock_wrapper.py'
                    }
                }
            }
        }
    }
}

