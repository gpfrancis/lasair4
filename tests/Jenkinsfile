pipeline {
    agent { 
        dockerfile {
            dir 'tests'
            filename 'Dockertest'
        }
    }
    stages {
        stage('Unit Tests') {
            steps {
                dir('tests/unit/pipeline/sherlock') {
                    sh 'python3 test_sherlock_wrapper.py'
                }
            }
            post {
                always {
                    junit 'tests/unit/pipeline/sherlock/test-reports/*.xml'
                }
            }
        }
    }
}

