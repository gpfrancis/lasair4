pipeline {
    agent any 
    stages {
        stage('Set up python env') {
            steps {
                sh '''python3 -m venv testenv
                      source testenv/bin/activate
                      pip install wheel\
                          pyyaml\
                          confluent-kafka==1.7.0 \
                          qub-sherlock==2.2.0
                   '''
            }
        }
        stage('Unit Tests') {
            steps {
                sh '''source testenv/bin/activate
                      which python
                      python --version
                      cd tests/unit/pipeline/sherlock
                      python test_sherlock_wrapper.py
                   '''
            }
        }
    }
}

