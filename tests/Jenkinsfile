pipeline {
    agent any 
    stages {
        stage('Unit Tests') {
            environment {
                PYTHONPATH = '../../../../pipeline/sherlock'
            }
            steps {
                dir('tests/unit/pipeline/sherlock') {
                    withPythonEnv('venv') {
                        sh 'python3 --version'
                        sh 'python3 test_sherlock_wrapper.py'
                    }
                }
            }
            post {
                always {
                    junit 'tests/test-reports/*.xml'
                }
            }
        }
    }
}

